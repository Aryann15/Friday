{
  "manifest_version": 3,
  "name": "Friday",
  "version": "1.0",
  "description": "better reply for linkedin messages, better comments",
  "action": {
    "default_popup": "index.html"
  },
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus",
    "downloads",
    "unlimitedStorage"
  ],

  "background": {
    "service_worker": "background.js"
  }
}
